<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="DeomSuite" parallel="tests" thread-count="3">
	<!-- Available browsers:"chrome", "firefox", "ie","edge" -->
    <test name="LoginTestDDT">
		<parameter name="browser" value="chrome" />
        <classes>
            <class name="tests.LoginDDT"/>
        </classes>
    </test>
 	<test name="LoginTest">
		 <parameter name="browser" value="firefox" />
        <classes>
            <class name="tests.LoginPageTest"/>
        </classes>
    </test>
    <test name="LoginTestInvalidID">
		<parameter name="browser" value="firefox" />
        <classes>
            <class name="tests.LoginTestInvalidID"/>
        </classes>
    </test>
    <test name="LoginAdministrator">
		<parameter name="browser" value="chrome" />
        <classes>
            <class name="tests.AdministratorLoginTest"/>
        </classes>
    </test>
    <test name="Admin System User Search">
		<parameter name="browser" value="edge" />
        <classes>
            <class name="tests.AdminSystemUserSearch"/>
        </classes>
    </test>
     <test name="Add Employee ">
		 <parameter name="browser" value="firefox" />
        <classes>
            <class name="tests.AddEmploy"/>
        </classes>
    </test>
</suite>
